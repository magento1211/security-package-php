<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\ReCaptchaReview\Model\IsEnabledForProductReviewInterface"
                type="Magento\ReCaptchaReview\Model\IsEnabledForProductReview"/>

    <type name="Magento\ReCaptcha\Model\LayoutSettings">
        <arguments>
            <argument name="configEnabledProviders" xsi:type="array">
                <item name="review" xsi:type="object">Magento\ReCaptchaReview\Model\IsEnabledForProductReview</item>
            </argument>
        </arguments>
    </type>
</config>
