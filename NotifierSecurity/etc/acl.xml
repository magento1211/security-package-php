<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Magento_Notifier::notifier" title="Magento Notifier" translate="title" sortOrder="40">
                        <resource id="Magento_Notifier::channel" title="Manage Channels" translate="title" sortOrder="10" />
                    </resource>
                </resource>


                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource
                                    id="Magento_Notifier::config"
                                    title="Magento Notifier"
                                    translate="title"
                                    sortOrder="40" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
