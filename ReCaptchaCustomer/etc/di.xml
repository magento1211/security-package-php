<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\ReCaptchaCustomer\Observer\AjaxLoginObserver">
        <arguments>
            <argument name="config" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerLogin</argument>
        </arguments>
    </type>
    <type name="Magento\ReCaptchaCustomer\Observer\CreateCustomerObserver">
        <arguments>
            <argument name="config" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerCreate</argument>
        </arguments>
    </type>
    <type name="Magento\ReCaptchaCustomer\Observer\ForgotPasswordObserver">
        <arguments>
            <argument name="config" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerForgotPassword</argument>
        </arguments>
    </type>
    <type name="Magento\ReCaptchaCustomer\Observer\LoginObserver">
        <arguments>
            <argument name="config" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerLogin</argument>
        </arguments>
    </type>

    <type name="Magento\ReCaptcha\Model\LayoutSettings">
        <arguments>
            <argument name="configEnabledProviders" xsi:type="array">
                <item name="login" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerLogin</item>
                <item name="create" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerCreate</item>
                <item name="forgot" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerForgotPassword</item>
            </argument>
        </arguments>
    </type>
</config>
