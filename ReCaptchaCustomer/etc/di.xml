<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerCreateInterface"
                type="Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerCreate"/>
    <preference for="Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerForgotPasswordInterface"
                type="Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerForgotPassword"/>
    <preference for="Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerLoginInterface"
                type="Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerLogin"/>

    <type name="Magento\ReCaptcha\Model\LayoutSettings">
        <arguments>
            <argument name="configEnabledProviders" xsi:type="array">
                <item name="login" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerLogin</item>
                <item name="create" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerCreate</item>
                <item name="forgot" xsi:type="object">Magento\ReCaptchaCustomer\Model\IsEnabledForCustomerForgotPassword</item>
            </argument>
        </arguments>
    </type>
</config>
