<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="form.additional.info">
            <block class="Magento\ReCaptcha\Block\Frontend\ReCaptcha" name="recaptcha" after="-"
                   template="Magento_ReCaptcha::recaptcha.phtml"
                   ifconfig="recaptcha/frontend/enabled">

                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_ReCaptcha/js/reCaptcha</item>
                                <item name="zone" xsi:type="string">forgot</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
