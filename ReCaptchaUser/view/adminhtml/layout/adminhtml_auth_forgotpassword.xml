<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <update handle="recaptcha" />

    <body>
        <referenceContainer name="form.additional.info">
            <block class="Magento\ReCaptchaAdminUi\Block\ReCaptcha"
                   name="recaptcha"
                   template="Magento_ReCaptchaAdminUi::recaptcha.phtml"
                   ifconfig="recaptcha/backend/enabled_for_user_forgot_password">
                <arguments>
                    <argument name="enabled_for" xsi:type="string">user_forgot_password</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
