<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Channel grid: START -->
    <virtualType name="MSP\NotifierAdminUi\Ui\DataProvider\ChannelFilterPool"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular"
                      xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext"
                      xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="msp_notifier_channel_data_source"
                      xsi:type="string">MSP\NotifierAdminUi\Model\ResourceModel\UI\Channel\Collection</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="MSP\NotifierAdminUi\Model\ResourceModel\UI\Channel\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">msp_notifier_channel</argument>
            <argument name="resourceModel"
                      xsi:type="string">MSP\Notifier\Model\ResourceModel\Channel\Collection</argument>
        </arguments>
    </virtualType>
    <!-- Channel grid: END -->

    <type name="MSP\NotifierAdminUi\Ui\DataProvider\Form\ChannelDataProvider">
        <arguments>
            <argument name="modifierPool"
                      xsi:type="object">MSP\NotifierAdminUi\Ui\DataProvider\Form\Channel\Modifier\Pool</argument>
        </arguments>
    </type>

    <type name="MSP\NotifierAdminUi\Ui\DataProvider\Listing\ChannelDataProvider">
        <arguments>
            <argument name="modifierPool"
                      xsi:type="object">MSP\NotifierAdminUi\Ui\DataProvider\Listing\Channel\Modifier\Pool</argument>
        </arguments>
    </type>

    <virtualType name="MSP\NotifierAdminUi\Ui\DataProvider\Form\Channel\Modifier\Pool"
                 type="Magento\Ui\DataProvider\Modifier\Pool">

        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="configuration" xsi:type="array">
                    <item name="class"
                          xsi:type="string">MSP\NotifierAdminUi\Ui\DataProvider\Form\Channel\Modifier\Configuration</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="MSP\NotifierAdminUi\Ui\DataProvider\Listing\Channel\Modifier\Pool"
                 type="Magento\Ui\DataProvider\Modifier\Pool">

        <arguments>
            <argument name="modifiers" xsi:type="array">

            </argument>
        </arguments>
    </virtualType>
</config>
